<launch>
    <!--Launch gazebo-->
    <include file="$(find robutler1_bringup)/launch/gazebo.launch"/>

    <!--Launch localization-->
    <include file="$(find robutler1_navigation)/launch/localization.launch"/>

    <!--Spawn the robutler-->
    <include file="$(find robutler1_bringup)/launch/bringup.launch"/>

    <!--Launch navigation-->
    <include file="$(find robutler1_navigation)/launch/navigation.launch"/>

    <!--Launch detection-->
    <include file="$(find robutler1_detection)/launch/detection.launch"/>

    <!--Launch mission manager-->
    <node pkg="robutler1_navigation" type="mission_manager.py" name="mission_manager" output="screen"/>

    <!--Launch the menu-->
    <include file="$(find robutler1_interface)/launch/menu.launch"/>
</launch>